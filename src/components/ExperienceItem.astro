---
import LinkIcon from "./icons/Link.astro";

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div
  class="relative mx-12 pb-12 flex flex-col justify-start items-start gap-y-8 before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border before:border-violet-200/40 before:rounded-full before:content-['']"
>
  <div class="flex flex-col justify-start items-start gap-y-1">
    <span class="text-violet-400 -left-[42px] absolute rounded-full text-5xl"
      >&bull;</span
    >

    <p class="text-2xl font-bold text-violet-100 w-full">
      {title}
    </p>
    {
      link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold text-lg text-violet-50/80 transition-colors hover:text-violet-50 flex justify-center items-center gap-x-1.5 mb-0.5"
        >
          <LinkIcon class="w-3.5 h-3.5 opacity-85" />
          {company}
        </a>
      )
    }
    <time class="p-0 m-0 text-sm text-violet-50/80">{date}</time>
  </div>
  <div
    class="relative flex flex-col gap-2 text-[17px] text-pretty text-gray-200 w-full max-w-lg"
  >
    {description}
  </div>
</div>
